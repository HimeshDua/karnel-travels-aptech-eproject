
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Karnel Travel Guide</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        
        <nav class="navbar">
            <div class="nav-container">
                <a asp-controller="Home" asp-action="Index" class="logo">
                    Karnel Travel Guide
                </a>

                
                <button class="nav-toggle" aria-label="Toggle navigation">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                
                <ul class="nav-menu">
                    @{
                        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["action"]?.ToString();
                    }
                    <li><a asp-controller="Home" asp-action="Index" class="@(controller == "Home" && action == "Index" ? "active" : "")">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About" class="@(controller == "Home" && action == "About" ? "active" : "")">About</a></li>
                    <li><a asp-controller="Search" asp-action="Index" class="@(controller == "Search" ? "active" : "")">Search</a></li>
                    <li><a asp-controller="Information" asp-action="Index" class="@(controller == "Information" ? "active" : "")">Information</a></li>
                    <li><a asp-controller="Home" asp-action="Contact" class="@(controller == "Home" && action == "Contact" ? "active" : "")">Contact</a></li>
                </ul>
            </div>
        </nav>

    </header>

    <main role="main" class="main-content">
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                @TempData["ErrorMessage"]
            </div>
        }

        
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Karnel Travel Guide. All rights reserved.</p>
            <p>Explore the beauty of our country with comprehensive travel information.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

