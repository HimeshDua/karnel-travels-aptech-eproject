@model List<Resort>

@{
    ViewData["Title"] = "Resorts";
}

<div class="page-header resorts-header">
    <div class="header-overlay"></div>

    <div class="container header-content">
        <span class="header-eyebrow">Relax & Retreat</span>

        <h1>
            Escape to Premium <span>Resorts & Retreats</span>
        </h1>

        <p class="header-subtitle">
            Discover luxury resorts, spa retreats,
            and serene destinations designed for relaxation.
        </p>

        <div class="header-meta">
            <span>ğŸï¸ Luxury Stays</span>
            <span>ğŸ’† Spa & Wellness</span>
            <span>ğŸŒ¿ Nature Retreats</span>
        </div>
    </div>
</div>


<div class="container">
    <section class="info-intro">
        <p>
            Discover premium resorts offering comprehensive recreational facilities, spa services, and luxury amenities. Find the perfect retreat for your next holiday.
        </p>
    </section>

    @if (Model != null && Model.Any())
    {
        <div class="items-grid">
            @foreach (var resort in Model)
            {
                <div class="item-card @(resort.Availability == 0 ? "unavailable" : "")">
                    <div class="item-header">
                        <h3>@resort.Name</h3>
                        <span class="quality-badge">â­ @resort.Quality</span>
                    </div>

                    <div class="item-details">
                        <p class="location">
                            <strong>ğŸ“ Location:</strong> @resort.Location
                        </p>
                        <p class="description">
                            @resort.Description
                        </p>
                        <div class="pricing-info">
                            <p class="price">
                                <strong>ğŸ’° Price:</strong> â‚¹@resort.Price.ToString("N0") per night
                            </p>
                            <p class="availability">
                                <strong>ğŸ›ï¸ Rooms:</strong> @resort.Availability / @resort.Capacity available
                            </p>
                        </div>
                    </div>

                    @{
                        var occupancyRate = resort.Capacity > 0 ? (double)(resort.Capacity - resort.Availability) / resort.Capacity * 100 : 0;
                    }

                    <div class="item-footer">
                        @if (resort.Availability > 0)
                        {
                            <span class="badge badge-success">Available</span>

                            @if (occupancyRate > 80)
                            {
                                <span class="badge badge-warning">High Demand</span>
                            }
                        }
                        else
                        {
                            <span class="badge badge-closed">Fully Booked</span>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-data">
            <p>No resort information available at the moment. Please check back later.</p>
        </div>
    }

    <div class="back-link">
        <a asp-controller="Information" asp-action="Index">â† Back to Information Hub</a>
    </div>
</div>
