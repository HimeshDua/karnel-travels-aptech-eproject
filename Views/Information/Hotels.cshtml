@model List<Hotel>
@* Hotels Information Page *@
@{
    ViewData["Title"] = "Hotels";
}

<div class="page-header hotels-header">
    <div class="header-overlay"></div>

    <div class="container header-content">
        <span class="header-eyebrow">Accommodation</span>

        <h1>
            Find the Right <span>Hotel for Your Stay</span>
        </h1>

        <p class="header-subtitle">
            Compare hotels by location, price, quality, and room availability
            to choose the stay that fits your journey.
        </p>

        <div class="header-meta">
            <span>üè® Multiple Categories</span>
            <span>üí∞ All Budget Ranges</span>
            <span>‚≠ê Quality Rated</span>
        </div>
    </div>
</div>


<div class="container">
    <section class="info-intro">
        <p>Our curated list of hotels includes options for every budget and preference. Each listing shows essential details to help you choose the perfect stay.</p>
    </section>

    @if (Model != null && Model.Any())
    {
        <div class="items-grid">
            @foreach (var hotel in Model)
            {
                <article class="item-card @(hotel.Availability == 0 ? "is-unavailable" : "")">

                    <!-- Header -->
                    <header class="item-card-header">
                        <h3 class="item-title">@hotel.Name</h3>

                        @if (hotel.Availability == 0)
                        {
                            <span class="status-badge closed">Fully Booked</span>
                        }
                        else
                        {
                            <span class="status-badge open">
                                @hotel.Availability rooms
                            </span>
                        }
                    </header>

                    <!-- Body -->
                    <div class="item-card-body">
                        <p class="item-location">üìç @hotel.Location</p>
                        <p class="item-description">
                            @hotel.Description
                        </p>
                    </div>

                    <!-- Meta -->
                    <footer class="item-card-meta">
                        <div class="meta price">
                            <span>üí∞</span>
                            <strong>‚Çπ@hotel.Price.ToString("N0")</strong>
                            <small>/ night</small>
                        </div>

                        <div class="meta quality">
                            <span>‚≠ê</span>
                            <strong>@hotel.Quality</strong>
                        </div>
                    </footer>

                </article>
            }
        </div>
    }
    else
    {
        <div class="no-data">
            <p>No hotel information available at the moment.</p>
        </div>
    }


    <div class="back-link">
        <a asp-controller="Information" asp-action="Index">‚Üê Back to Information Hub</a>
    </div>
</div>
